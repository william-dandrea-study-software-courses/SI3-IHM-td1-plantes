<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    android:id="@+id/news_list_design_one_element_main_id"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#F8F8F8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/news_list_design_one_element_image_id"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:src="@android:drawable/ic_menu_compass"
                android:backgroundTint="#A6A6A6"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_list_design_one_element_main_title_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textFontWeight="800"

                        android:textSize="12dp"
                        android:textColor="@color/black"

                        android:padding="5dp"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:text="Tournesdhdhdhhdhdhddhdhdhol"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/news_list_design_one_element_description_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:maxLines="3"
                    android:fontFamily="@font/montserrat"

                    android:text="Le tournesol, ou anciennement Hélianthe ou Soleil1 (Helianthus annuus), est une grande plante annuelle, appartenant à la famille des Astéracées (Composées), dont les fleurs sont groupées en capitules de grandes dimensions."
                    android:textSize="8dp"
                    android:textColor="#939393"
                    />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_list_design_one_element_date_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="10dp"
                        android:textColor="#939393"
                        android:fontFamily="@font/montserrat"
                        android:textFontWeight="600"

                        android:maxLines="1"
                        android:maxLength="25"

                        android:padding="5dp"
                        android:text="Postroff - France"/>

                    <TextView
                        android:id="@+id/news_list_design_one_element_call_to_action_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Expertiser cette plante"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"
                        android:textFontWeight="600"

                        android:padding="5dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>