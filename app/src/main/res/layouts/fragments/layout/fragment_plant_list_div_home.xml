<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".controler.fragments.homefragments.NewsDivHomeFragment"
    android:id="@+id/fragment_plants_div_home_main_div"
    >





    <RelativeLayout
        android:id="@+id/fragment_news_div_home_title_main_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/topDivider"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <View

            android:id="@+id/view"
            android:layout_width="315dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"

            android:layout_marginTop="10dp"
            android:background="#FFF617" />

        <TextView
            android:id="@+id/fragment_news_div_home_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginStart="10dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/montserrat_bold"

            android:text="Plantes"
            android:textColor="#000000"
            android:textSize="30sp" />


    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_plant_div_home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_news_div_home_title_main_div"
        />


    <TextView
        android:id="@+id/fragment_plant_div_home_see_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/montserrat"

        android:text="En voir plus"
        android:textAlignment="center"
        android:textColor="@color/black"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_plant_div_home_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>